<Window x:Class="App_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock Name="tb_1" Background="LightBlue" Padding="20" Margin="10" Canvas.Left="30" Canvas.Top="30"  PreviewMouseMove="tb1_PreviewMouseMove" PreviewLostKeyboardFocus="tb1_PreviewLostKeyboardFocus"> TextBlock 1</TextBlock>
        <TextBlock Name="tb_2" Background="LightPink" Padding="20" Margin="10" Canvas.Left="60" Canvas.Top="60" PreviewMouseMove="tb2_PreviewMouseMove" PreviewLostKeyboardFocus="tb2_PreviewLostKeyboardFocus"> TextBlock 2</TextBlock>
    </Canvas>
</Window>
